<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <property require-input="true">
    <name>druid.package.name</name>
    <value>sugo-druid-1.3.0-bin.tar.gz</value>
    <description>druid 包名</description>
  </property>

  <property require-input="true">
    <name>druid.log.dir</name>
    <value>/data1/druid/logs</value>
    <description>druid 日志目录</description>
  </property>

  <property require-input="true">
    <name>druid.storage.dir</name>
    <value>/data1/druid/var/druid</value>
    <description>druid storage目录</description>
  </property> 
  <property require-input="true">
    <name>druid.storage.hdfs.dir</name>
    <value>/druid</value>
    <description>druid hdfs目录</description>
  </property>

  <property require-input="true">
    <name>java.io.tmpdir</name>
    <value>/data1/druid/var/tmp</value>
    <description>druid hdfs目录</description>
  </property>
</configuration>
